//! Update:
// Use the updateOne() method to update one document.

// Use the updateMany() method to update more than one document.

const database = 'cursomongodb';
const collection = 'users';

// Select the database to use.
use(database);

// db.collection.updateOne(filter, update, options)
db.users.updateOne(
  {"_id": 2},
  {
    "$set": { "email": "migue@google.com" }
  }
);

db.users.updateOne(
  {"_id": 2},
  {
    "$set": { "type": 5554443322 }
  }
);

// $set: Crea nuevos fields
// $unset: elimina fields
db.users.updateOne(
  {"_id": 2},
  [
    { $set: { "phone": 123456, "email": "miguel@gmail.com" } },
    { $unset: [ "type", "age" ] }
  ]
);

// ! UpdateMany
// $set: Crea nuevos fields
// $unset: elimina fields
db.users.updateMany(
   { "name": "Antonio" },
   [
      { $set: { "isRepeated": true } },
      { $unset: "email" }
   ]
);

db.users.find();

//! replaceOne(filter, replacement, options)
//  reemplazar o ignorar
// si no existe no hace nada.
db.users.replaceOne(
  {"_id": 3},
  {"email": "gabriel@google.com"}
);

// Reemplazar o crear.
// si no existe lo crea
db.users.replaceOne(
  {"name": "No Existe"},
  {"name": "Jesus", "email": "jesu@google.com"},
  { upsert: true }
);
// Configurar upsert: true insertar√≠a el documento si no se encontrara ninguna coincidencia. upsert en false es igual que omitir esta opcion